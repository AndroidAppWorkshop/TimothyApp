<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.leolin.android.gcm.example" >

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 用來連接到 Google Services -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <!-- 需要使用 Google 帳戶資訊(4.0.4以下版本需要使用者帳戶) -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- 收到訊息時保持 CPU 休眠 -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <!-- 接收 GCM 用 -->

    <permission android:name="me.leolin.android.gcm.example.permission.C2D_MESSAGE"
                android:protectionLevel="signature" />
    <uses-permission android:name="me.leolin.android.gcm.example.permission.C2D_MESSAGE" />
        <!-- 使用GCM -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 允許 GCMBroadcastReceiver 接收處理來自 GCM 所 SEND 出來的 RECEIVE 跟 REGISTRATION 這兩個 Intent -->
        <receiver
                android:name=".GcmBroadcastReceiver"
                android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="me.leolin.android.gcm.example" />
            </intent-filter>
        </receiver>
        <service android:name=".GcmIntentService" />
        <!-- GCM service -->
    </application>

</manifest>
